<h1>Tasks#index</h1>
<p>Find me in app/views/tasks/index.html.erb</p>
<hr>
<p><%= link_to "New Task", new_task_path %></p>
<ul>
  <% @tasks.each do |x| %>
  <li><strong><%= link_to "#{x.done ? "[X]" : "[_]"}", {controller:'tasks',action:'update',id:x.id, task:{id:x.id,name:x.name,done:true}}, method: :patch  %></strong> <%= x.name %> | <%= link_to "View details", task_path(x) %> | <%= link_to "edit", edit_task_path(x) %> | <%= link_to "Delete this task", task_path(x), method: :delete %></li>
  <% end %>
</ul>
